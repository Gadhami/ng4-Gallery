{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "baseUrl": "src",
    "sourceMap": true,
    // "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,

    // Ref.    https://goo.gl/HpymYt
    "skipLibCheck": true,
    "stripInternal": true,
    "declaration": true,
    // "noImplicitAny": true,
    "strictNullChecks": true,
    // --

    "exclude": [
        "docs/*",
        "node_modules/*",
        "coverage/*"
    ],

    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2016",
      "dom"
    ]
  }
}
